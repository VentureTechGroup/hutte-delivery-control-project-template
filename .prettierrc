{
	"singleQuote": true,
	"printWidth": 120,
	"tabWidth": 2,
	"requireConfig": false,
	"useTabs": true,
	"trailingComma": "none",
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"semi": true,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		}
	],
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"]
}
